<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualizarIngredienteActivity"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrediente"
        android:textColor="@color/purple_500"
        android:textSize="31dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/carListRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del ingrediente:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tit_nombre_ingrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre "
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del ingrediente:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tit_descripcion_ingrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Conseguido?"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tit_conseguido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sí/No"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_guardar_ingrediente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_ingredient"
        android:text="Guardar ingrediente" />
</LinearLayout>